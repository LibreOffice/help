     <tablecell>
      <paragraph l10n="E" role="paragraph" id="par_id3155132" xml-lang="en-US" oldref=""><image src="res/commandimagelist/sc_choosedesign.png" id="img_id3145785"><alt xml-lang="en-US" id="alt_id3145785">Icon</alt></image></paragraph>
     </tablecell>
     <tablecell>
      <paragraph role="paragraph" id="par_id3153953" l10n="U" xml-lang="en-US" oldref="4">Choose Themes</paragraph>
     </tablecell>
    </tablerow>
   
  </table>
  </section>
  <paragraph xml-lang="en-US" role="note" id="par_id3154942" l10n="U" oldref="7">When you click the <emph>Choose Themes </emph>icon, $[officename] automatically saves a copy of the spreadsheet.</paragraph>
  <bookmark branch="hid/HID_DLGSTYLES_LISTBOX" xml-lang="en-US" id="bm_id3153159"/><paragraph l10n="U" role="paragraph" id="par_id3147127" xml-lang="en-US" oldref="5"><ahelp visibility="visible" hid="HID_DLGSTYLES_LISTBOX">Click the formatting theme that you want to apply, and then click <emph>OK</emph>.</ahelp></paragraph>
