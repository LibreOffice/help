<bookmark xml-lang="en-US" branch="hid/SC:LISTBOX:RID_SCDLG_CONDFORMAT:LB_COND3_TEMPLATE" id="bm_id3149257" localize="false"/>
<paragraph role="heading" id="hd_id3156384" xml-lang="en-US" level="2" l10n="U" oldref="9">Cell Style</paragraph>
<paragraph role="paragraph" id="par_id3145228" xml-lang="en-US" l10n="U" oldref="10"><ahelp hid="SC:LISTBOX:RID_SCDLG_CONDFORMAT:LB_COND3_TEMPLATE">Choose the style to be applied if the specified condition matches.</ahelp></paragraph>
<bookmark xml-lang="en-US" branch="hid/SC:EDIT:RID_SCDLG_CONDFORMAT:EDT_COND2_2" id="bm_id3150298" localize="false"/>
<bookmark xml-lang="en-US" branch="hid/SC:EDIT:RID_SCDLG_CONDFORMAT:EDT_COND1_1" id="bm_id3147001" localize="false"/>
