<paragraph role="paragraph" id="par_idN105CC" xml-lang="en-US" l10n="NEW"><ahelp hid=".">Select the field name for the filter condition.</ahelp></paragraph>
<bookmark xml-lang="en-US" branch="hid/HID_QUERYWIZARD_LSTOPERATOR_1" id="bm_id1973937" localize="false"/>
<bookmark xml-lang="en-US" branch="hid/HID_QUERYWIZARD_LSTOPERATOR_2" id="bm_id9367046" localize="false"/>
<bookmark xml-lang="en-US" branch="hid/HID_QUERYWIZARD_LSTOPERATOR_3" id="bm_id8345286" localize="false"/>
<paragraph role="heading" id="par_idN10568" xml-lang="en-US" level="3" l10n="NEW">Condition</paragraph>
<paragraph role="paragraph" id="par_idN105D9" xml-lang="en-US" l10n="NEW"><ahelp hid=".">Select the condition for the filter.</ahelp></paragraph>
<bookmark xml-lang="en-US" branch="hid/HID_QUERYWIZARD_TXTVALUE_1" id="bm_id1222266" localize="false"/>
<bookmark xml-lang="en-US" branch="hid/HID_QUERYWIZARD_TXTVALUE_2" id="bm_id2625812" localize="false"/>
