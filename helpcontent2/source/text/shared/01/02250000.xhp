<bookmark xml-lang="en-US" branch="hid/HID_BIB_DB_TBX" id="bm_id3155354" localize="false"/><paragraph role="heading" id="hd_id3150999" xml-lang="en-US" level="1" l10n="U" oldref="1"><link href="text/shared/01/02250000.xhp" name="Bibliography Database">Bibliography Database</link></paragraph>
