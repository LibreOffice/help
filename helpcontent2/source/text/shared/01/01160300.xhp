      <embed href="text/shared/01/01070000.xhp#filename"/>
<bookmark xml-lang="en-US" branch="hid/HID_SEND_MASTER_CTRL_LISTBOX_TEMPLATE" id="bm_id3155392" localize="false"/>
<bookmark xml-lang="en-US" branch="hid/HID_FILESAVE_TEMPLATE" id="bm_id3145072" localize="false"/>
<paragraph xml-lang="en-US" id="hd_id3147291" role="heading" level="2" l10n="CHG"
                 oldref="8">separated by</paragraph>
      <paragraph xml-lang="en-US" id="par_id3156426" role="paragraph" l10n="U" oldref="7"><ahelp hid="HID_FILESAVE_TEMPLATE">Select the paragraph style or outline level that you want to use to separate the source document into sub-documents.</ahelp> By default a new document is created for every outline level 1.</paragraph>
<bookmark xml-lang="en-US" branch="hid/HID_SEND_MASTER_CTRL_LISTBOX_FILTER" id="bm_id3153527" localize="false"/>
