<paragraph role="heading" id="hd_id3147543" xml-lang="en-US" level="1" l10n="U" oldref="1">Conversion of measurement units</paragraph>
<table id="tbl_id3153272">
<tablerow>
<tablecell colspan="" rowspan="">
<paragraph role="paragraph" id="par_id3158442" xml-lang="en-US" l10n="U" oldref="2">
<emph>Millimeter</emph>
</paragraph>
<paragraph role="paragraph" id="par_id3154350" xml-lang="en-US" l10n="U" oldref="13">1 mm = 0.03937008 inch</paragraph>
<paragraph role="paragraph" id="par_id3152895" xml-lang="en-US" l10n="U" oldref="14">1 mm = 0.2362205 pica</paragraph>
<paragraph role="paragraph" id="par_id3153539" xml-lang="en-US" l10n="U" oldref="15">1 mm = 0.1 cm</paragraph>
<paragraph role="paragraph" id="par_id3154561" xml-lang="en-US" l10n="U" oldref="16">1 mm = 56.7 Twips</paragraph>
</tablecell>
<tablecell colspan="" rowspan="">
<paragraph role="paragraph" id="par_id3149511" xml-lang="en-US" l10n="U" oldref="8">
<emph>Pica</emph>
</paragraph>
<paragraph role="paragraph" id="par_id3166445" xml-lang="en-US" l10n="U" oldref="27">1 pica = 4.233333 mm</paragraph>
<paragraph role="paragraph" id="par_id3152780" xml-lang="en-US" l10n="U" oldref="28">1 pica = 0.4233333 cm</paragraph>
<paragraph role="paragraph" id="par_id3153031" xml-lang="en-US" l10n="U" oldref="29">1 pica = 0.1666667 inch</paragraph>
<paragraph role="paragraph" id="par_id3166410" xml-lang="en-US" l10n="U" oldref="30">1 pica = 12 point</paragraph>
<paragraph role="paragraph" id="par_id3151110" xml-lang="en-US" l10n="U" oldref="31">1 pica = 240.029811 Twips</paragraph>
</tablecell>
</tablerow>
<tablerow>
<tablecell colspan="" rowspan="">
<paragraph role="paragraph" id="par_id3155342" xml-lang="en-US" l10n="U" oldref="4">
<emph>Centimeter</emph>
</paragraph>
<paragraph role="paragraph" id="par_id3153088" xml-lang="en-US" l10n="U" oldref="17">1 cm = 10 mm</paragraph>
<paragraph role="paragraph" id="par_id3146948" xml-lang="en-US" l10n="U" oldref="18">1 cm = 0.3937008 inch</paragraph>
<paragraph role="paragraph" id="par_id3153585" xml-lang="en-US" l10n="U" oldref="19">1 cm = 2.362205 pica</paragraph>
<paragraph role="paragraph" id="par_id3147384" xml-lang="en-US" l10n="U" oldref="20">1 cm = 28.34646 point</paragraph>
<paragraph role="paragraph" id="par_id3152824" xml-lang="en-US" l10n="U" oldref="21">1 cm = 567 Twips</paragraph>
</tablecell>
<tablecell colspan="" rowspan="">
<paragraph role="paragraph" id="par_id3159116" xml-lang="en-US" l10n="U" oldref="10">
<emph>Point</emph>
</paragraph>
<paragraph role="paragraph" id="par_id3150503" xml-lang="en-US" l10n="U" oldref="32">1 point = 0.3527778 mm</paragraph>
<paragraph role="paragraph" id="par_id3150771" xml-lang="en-US" l10n="U" oldref="33">1 point = 0.03527778 cm</paragraph>
<paragraph role="paragraph" id="par_id3149819" xml-lang="en-US" l10n="U" oldref="34">1 point = 0.01388889 inch</paragraph>
<paragraph role="paragraph" id="par_id3154514" xml-lang="en-US" l10n="U" oldref="35">1 point = 0.08333333 pica</paragraph>
<paragraph role="paragraph" id="par_id3146137" xml-lang="en-US" l10n="U" oldref="36">1 point = 20.00250126 Twips</paragraph>
</tablecell>
</tablerow>
<tablerow>
<tablecell colspan="" rowspan="">
<paragraph role="paragraph" id="par_id3146848" xml-lang="en-US" l10n="U" oldref="6">
<emph>Inch</emph>
</paragraph>
<paragraph role="paragraph" id="par_id3148473" xml-lang="en-US" l10n="U" oldref="22">1 inch = 25.4 mm</paragraph>
<paragraph role="paragraph" id="par_id3156329" xml-lang="en-US" l10n="U" oldref="23">1 inch = 2.54 cm</paragraph>
<paragraph role="paragraph" id="par_id3158430" xml-lang="en-US" l10n="U" oldref="24">1 inch = 6 pica</paragraph>
<paragraph role="paragraph" id="par_id3154306" xml-lang="en-US" l10n="U" oldref="25">1 inch = 72 point</paragraph>
<paragraph role="paragraph" id="par_id3153564" xml-lang="en-US" l10n="U" oldref="26">1 inch = 1440.18 Twips</paragraph>
</tablecell>
<tablecell colspan="" rowspan="">
<paragraph role="paragraph" id="par_id3156023" xml-lang="en-US" l10n="U" oldref="12">
<emph>Twips</emph>
</paragraph>
<paragraph role="paragraph" id="par_id3145609" xml-lang="en-US" l10n="U" oldref="37">1 Twip = 0.001763668 cm</paragraph>
<paragraph role="paragraph" id="par_id3154280" xml-lang="en-US" l10n="U" oldref="38">1 Twip = 0.017636684 mm</paragraph>
</tablecell>
</tablerow>
