<bookmark xml-lang="en-US" branch="hid/modules/simpress/ui/headerfootertab/datetime_value" id="bm_id4139835" localize="false"/><paragraph role="heading" id="par_idN1074F" xml-lang="en-US" level="4" l10n="NEW">Fixed</paragraph>
