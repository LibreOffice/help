<bookmark xml-lang="en-US" branch="hid/modules/simpress/ui/headerfootertab/datetime_format_list" id="bm_id9242835" localize="false"/><paragraph role="heading" id="par_idN10771" xml-lang="en-US" level="4" l10n="NEW">Variable</paragraph>
