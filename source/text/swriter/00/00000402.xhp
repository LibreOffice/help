			<tablecell>
				<paragraph id="par_id961685977342894" role="paragraph"><image src="cmd/lc_gotopage.svg" id="img_id321685977342895" width="1cm"  height="1cm"><alt id="alt_id901685977342896">Icon Go to Page</alt></image></paragraph>
			</tablecell>
			<tablecell>
				<paragraph id="par_id191685977342898" role="paragraph">Go to Page</paragraph>
			</tablecell>
		</tablerow>
	</table>
	<embed href="text/shared/00/00000004.xhp#from_keyboard"/>
	<paragraph role="paragraph" id="par_id651685976992603"><switchinline select="sys"><caseinline select="MAC"><keycode>Command</keycode></caseinline><defaultinline><keycode>Ctrl</keycode></defaultinline></switchinline><keycode> + G</keycode></paragraph>
	<embed href="text/shared/00/00000004.xhp#from_statusbar"/>
