<paragraph id="par_idN105A1" role="paragraph" xml-lang="en-US"><variable id="wordcount">Choose <emph>Tools - Word Count</emph></variable></paragraph>
<paragraph id="par_id3154100" role="paragraph" xml-lang="en-US"><variable id="kapitelnumerierung">Choose <emph>Tools - Chapter Numbering</emph></variable></paragraph>
