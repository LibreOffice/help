<bookmark branch="hid/modules/swriter/ui/wrappage/after" id="bm_id3150694" localize="false"/>
<bookmark branch="index" id="bm_id781692975594815">
<bookmark_value>wrap;wrap right</bookmark_value>
<bookmark_value>wrap text;after</bookmark_value>
</bookmark>
<h3 id="hd_id3155870">After</h3>
<paragraph role="paragraph" id="par_id3150700"><ahelp hid=".">Wraps text on the right side of the object if there is enough space.</ahelp></paragraph>
<table id="tbl_id3147426">
<tablerow>
