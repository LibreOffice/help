<section id="wrap">
<bookmark xml-lang="en-US" branch="hid/modules/swriter/ui/wrappage/@@nowidget@@" id="bm_@@nowidget@@" localize="false"/>
<bookmark xml-lang="en-US" branch="hid/modules/swriter/ui/wrapdialog/@@nowidget@@" id="bm_@@nowidget@@" localize="false"/>
