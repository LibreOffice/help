<paragraph role="paragraph" id="par_id3148442">Parallel</paragraph>
</tablecell>
</tablerow>
</table>

<bookmark branch="hid/.uno:WrapThrough" id="bm_id622670" localize="false"/>
<bookmark branch="hid/modules/swriter/ui/wrappage/through" id="bm_id3151096" localize="false"/>
<bookmark branch="index" id="bm_id461692975665095">
<bookmark_value>wrap;wrap through</bookmark_value>
<bookmark_value>wrap text;through</bookmark_value>
</bookmark>
<h3 id="hd_id3151081">Through</h3>
<paragraph role="paragraph" id="par_id3154089"><variable id="durchlauftext"><ahelp hid=".">Places the object in front of the text.</ahelp>
</variable></paragraph>
<table id="tbl_id3145320">
<tablerow>
<tablecell>
<paragraph role="paragraph" id="par_id3150162">
