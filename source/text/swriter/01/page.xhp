   <bookmark branch="hid/modules/swriter/ui/pagestylespanel/bgselect" id="bm_id671720719647098" localize="false"/>
   <section id="background">
      <h3 id="hd_id301720720382515"><variable id="background_hd">Background</variable></h3>
      <section id="background_content">
         <paragraph role="paragraph" id="par_id211720720432330">Select a style for background of the document.</paragraph>
         </section>
   </section>
   <h4 id="hd_id311720720576820">None</h4>
   <paragraph role="paragraph" id="par_id81720720629182">No background.</paragraph>
   <h4 id="hd_id871720720642714"><link href="text/shared/01/05210200.xhp">Color</link></h4>
   <paragraph role="paragraph" id="par_id481720720753703">Use the color picker to select a single, solid background color.</paragraph>
   <h4 id="hd_id411720724581844"><link href="text/shared/01/05210300.xhp">Gradient</link></h4>
   <paragraph role="paragraph" id="par_id731720724627274">Fills the page background with a gradient.</paragraph>
   <paragraph role="paragraph" id="par_id51720724737414">Applies a two-color, vertical gradient by default. Open the <link href="text/shared/01/05210100.xhp"><menuitem>Area</menuitem></link> tab in the <menuitem>Page Styles</menuitem> dialog to apply other gradient styles.</paragraph>
   <h4 id="hd_id201720725010431"><link href="text/shared/01/05210400.xhp">Hatching</link></h4>
   <paragraph role="paragraph" id="par_id421721414369909">Fills the page background with a hatching pattern.</paragraph>
   <h4 id="hd_id281720725014105"><link href="text/shared/01/05210500.xhp">Bitmap</link></h4>
   <paragraph role="paragraph" id="par_id641720808238540">Select an image to use as a background.</paragraph>
   <h4 id="hd_id291720725017813"><link href="text/shared/01/05210800.xhp">Pattern</link></h4>
   <paragraph role="paragraph" id="par_id941720813042056">Fills the page with a simple, two color pattern.</paragraph>

