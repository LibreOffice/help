      <paragraph id="par_id3150023" role="paragraph" xml-lang="en-US"> <image id="img_id3150030" src="res/lc06301.png"><alt xml-lang="en-US" id="alt_id3150030">Icon</alt></image></paragraph>
    </tablecell>
    <tablecell>
      <paragraph id="par_id3154614" role="paragraph" xml-lang="en-US">Previous footnote</paragraph>
    </tablecell>
  </tablerow>
</table>

<bookmark xml-lang="en-US" branch="hid/modules/swriter/ui/insertfootnote/next" id="bm_id3149631" localize="false"/>

<paragraph id="hd_id3154630" role="heading" level="2" xml-lang="en-US">Arrow right</paragraph>
<paragraph id="par_id3149638" role="paragraph" xml-lang="en-US"><ahelp hid="modules/swriter/ui/insertfootnote/next">Moves to the next footnote or endnote anchor in the document.</ahelp></paragraph>

