<bookmark xml-lang="en-US" branch="hid/modules/swriter/ui/tocstylespage/default" id="bm_id3153533" localize="false"/>
<h3 id="hd_id3149807" xml-lang="en-US">Default</h3>
<paragraph role="paragraph" id="par_id3153539" xml-lang="en-US"><ahelp hid="modules/swriter/ui/tocstylespage/default">Removes the assigned paragraph style for the selected index level. “Default paragraph style” is used when no paragraph style is assigned.</ahelp></paragraph>
<bookmark xml-lang="en-US" branch="hid/modules/swriter/ui/tocstylespage/edit" id="bm_id3153668" localize="false"/>
<h3 id="hd_id3154474" xml-lang="en-US">Edit</h3>
<paragraph role="paragraph" id="par_id3153675" xml-lang="en-US"><ahelp hid="modules/swriter/ui/tocstylespage/edit">Opens a dialog for editing the selected paragraph style.</ahelp></paragraph>
