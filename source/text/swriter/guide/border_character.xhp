<bookmark xml-lang="en-US" branch="index" id="bm_id3156136">
<bookmark_value>characters;defining borders</bookmark_value>
      <bookmark_value>borders; for characters</bookmark_value>
      <bookmark_value>frames; around characters</bookmark_value>
