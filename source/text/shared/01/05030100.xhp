      <section id="zweizeiligtexth">
          <h3 xml-lang="en-US" id="hd_id3149378">Double</h3>
      <paragraph xml-lang="en-US" id="par_id3154512" role="paragraph"><variable id="zweizeiligtext">Sets the line spacing to two lines.</variable></paragraph>
      <table id="tab_id141643819242728">
