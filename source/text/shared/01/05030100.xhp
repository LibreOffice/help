<bookmark xml-lang="en-US" branch="hid/cui/ui/paraindentspacing/spinED_BOTTOMDIST" id="bm_id3154921" localize="false"/>
<h3 xml-lang="en-US" id="hd_id3145590">Below paragraph</h3>
      <paragraph xml-lang="en-US" id="par_id3163822" role="paragraph"><ahelp hid="cui/ui/paraindentspacing/spinED_BOTTOMDIST">Enter the amount of space that you want to leave below the selected paragraph(s).</ahelp></paragraph>
<bookmark xml-lang="en-US" branch="hid/cui/ui/paraindentspacing/checkCB_CONTEXTUALSPACING" id="bm_id3154922" localize="false"/>
<h3 xml-lang="en-US" id="hd_id3145591">Do not add space between paragraphs of the same style</h3>
	 <paragraph xml-lang="en-US" id="par_id3163823" role="paragraph"><ahelp hid="cui/ui/paraindentspacing/checkCB_CONTEXTUALSPACING">Makes any space specified before or after this paragraph not be applied when the preceding and following paragraphs are of the same paragraph style.</ahelp></paragraph>
<bookmark xml-lang="en-US" branch="hid/cui/ui/paraindentspacing/comboLB_LINEDIST" id="bm_id3153095" localize="false"/>
<h2 xml-lang="en-US" id="hd_id3156441">Line spacing</h2>
      <paragraph xml-lang="en-US" id="par_id3146985" role="paragraph"><ahelp hid="cui/ui/paraindentspacing/comboLB_LINEDIST">Specify the amount of space to leave between lines of text in a paragraph.</ahelp></paragraph>
      <section id="einzeiligtexth">
      <h3 xml-lang="en-US" id="hd_id3146923">Single</h3>
      <paragraph xml-lang="en-US" id="par_id3150011" role="paragraph"><variable id="einzeiligtext">Applies single line spacing to the current paragraph. This is the default setting.</variable></paragraph>
