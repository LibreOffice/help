<bookmark branch="hid/cui/ui/textanimtabpage/BTN_RIGHT" id="bm_id3145072" localize="false"/><h3 id="hd_id3147010">To the Right</h3>
<paragraph role="paragraph" id="par_id3143267"><ahelp hid="cui/ui/textanimtabpage/BTN_RIGHT">Scrolls text from left to right.</ahelp></paragraph>
